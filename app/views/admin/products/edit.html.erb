<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <br>
    <h1>Update product</h1>
    <br>
    <%= render 'shared/validation_messages', model: @product %>
    <%= form_for @product, url: admin_product_path, method: :patch do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
      <%= error_for :name, @product.errors%>
      <br>
      <%= form.label :description, 'Description (optional)' %>
      <%= form.text_area :description, class: 'form-control' %>
      <%= error_for :description, @product.errors %>
      <br>
      <%= form.label :pictures %>
      <%= form.file_field :pictures, multiple: true %>
      <br>
      <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-default' %>
    <% end %>
  </div>
</div>
